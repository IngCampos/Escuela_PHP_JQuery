{% extends 'base.twig' %}

{% block section %}
	Attendances
{% endblock %}

{% block body %}

<table>
	<tr>
		<td>Hour</td>
		<td>Subject</td>
		<td>Grade</td>
		<td>Teacher</td>
		<td>Attendances</td>
	</tr>
	{% for class in classes %}
	<tr>
		<td>{{ class.hour }}</td>
		<td>{{ class.subject }}</td>
		<td>{{ class.grade }}</td>
		<td>{{ class.teacher }}</td>
		<td>
			Assistances: {{ class.attendances.assistance|default(0) }}<br>
			Absences: {{ class.attendances.absence|default(0) }}<br>
			Exculpatories: {{ class.attendances.exculpatory|default(0) }}<br>
			Delays: {{ class.attendances.delay|default(0) }}<br>
			Total days: {{ class.attendances.total }}
			<hr>
		</td>
	</tr>
	{% endfor %}
</table>

{% endblock %}
