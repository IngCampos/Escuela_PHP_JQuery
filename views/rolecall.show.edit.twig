{% extends 'base.twig' %}

{% block section %}
	Attendance edit: {{ class.name }} - {{ class.student.name }}
{% endblock %}

{% block body %}

<h3>Subject: {{class.name}}</h3>
<h3>Hour: {{class.hour}}</h3>
<h3>Grade: {{class.grade}}</h3>
<h3>Student: {{class.student.name}}</h3>"
<h3>
	<center><a class='fa fa-sticky-note' href='/rolecall/show?class_id={{ class.id }}'>Look attendance</a></center>
</h3>
<hr>
<form method="post" action="/rolecall/show/store?class_id={{ class.id }}&student_id={{ class.student.id }}">
	<table>
		<tr>
			<td>Date</td>
			<td>Assistances</td>
			<td>Absences</td>
			<td>Exculpatories</td>
			<td>Delays</td>
		</tr>
		{% for attendance in class.student.attendances %}
		<tr>
			<td>{{ attendance.date }}</td>
			<td><center>
				<input type='radio' name='{{ attendance.date }}' value=1 
				{% if attendance.type_attendance_id == 1 %} checked {% endif%}>
			</center></td>
			<td><center>
				<input type='radio' name='{{ attendance.date }}' value=2 
				{% if attendance.type_attendance_id == 2 %} checked {% endif%}>
			</center></td>
			<td><center>
				<input type='radio' name='{{ attendance.date }}' value=3 
				{% if attendance.type_attendance_id == 3 %} checked {% endif%}>
			</center></td>
			<td><center>
				<input type='radio' name='{{ attendance.date }}' value=4 
				{% if attendance.type_attendance_id == 4 %} checked {% endif%}>
			</center></td>
		</tr>
		{% endfor %}
	</table>
	<button type="submit" value="Update" class="btn btn-success">Update <i class="fa fa-save"></i></button>
</form>

{% endblock %}