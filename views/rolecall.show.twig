{% extends 'base.twig' %}

{% block section %}Subject: {{ class.name }}{% endblock %}

{% block body %}

<h3>Name: {{ class.name }}</h3>
<h3>Hour: {{ class.hour }}</h3>
<h3>Grade: {{ class.grade }}</h3>
<h3>Description: {{ class.description }}</h3>
<h3>
	<center>
		<a class='fa fa-sticky-note' href='/rolecall'>Look classes</a>
		<a class='fa fa-edit' href='/rolecall/create/{{class.id}}'>Pass the role</a>
	</center>
</h3>
<hr>
<table>
	<tr>
		<td>Name</td>
		<td>Assistance</td>
		<td>Abscence</td>
		<td>Exculpatory</td>
		<td>Delays</td>
	</tr>
	{% for student in class.students %}
	<tr>
		<td>{{student.name}}</td>
		<td><center>{{student.attendances.assistance}}</center></td>
		<td><center>{{student.attendances.abscence}}</center></td>
		<td><center>{{student.attendances.exculpatory}}</center></td>
		<td><center>{{student.attendances.delay}}</center></td>
		<td><center>
			<a class='fa fa-edit' href='/rolecall/show/{{ class.id }}/edit/{{ student.id }}'></a>
		</center></td>
	</tr>
{% endfor %}
</table>
<center>Total days: 4 </center>
	
{% endblock %}